<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:vm="clr-namespace:ShellLessonStep2.ViewModels"
             x:DataType="vm:AnimalDetailsViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShellLessonStep2.Views.AnimalDetailsView"
             Title="AnimalDetailsView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding SelectedAnimal.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding SelectedAnimal.Location}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding SelectedAnimal.Details}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Source="{Binding SelectedAnimal.ImageUrl}" HeightRequest="200"></Image>
      

    </VerticalStackLayout>

</ContentPage>